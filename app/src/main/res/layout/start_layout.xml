<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GUI.Start.StartActivity"
    android:gravity="center_horizontal"
    android:background="@color/white">

    <TextView
        android:id="@+id/tvWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="@string/welcome"
        android:textSize="25sp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"/>

    <LinearLayout
        android:id="@+id/llPlayersOrNot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tvWelcome">

        <TextView
            android:id="@+id/tvPlayersOrNot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="@string/playersOrNot"
            android:textSize="20sp" />

        <RadioGroup
            android:id="@+id/rgPlayersOrNot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rbPlayers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/players"
                android:textSize="18sp"
                android:buttonTint="@color/blue"
                android:onClick="onClickWithPlayers"/>

            <Space
                android:layout_width="50dp"
                android:layout_height="wrap_content"/>

            <RadioButton
                android:id="@+id/rbNoPlayers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/noPlayers"
                android:textSize="18sp"
                android:buttonTint="@color/blue"
                android:onClick="onClickWithoutPlayers"/>
        </RadioGroup>
    </LinearLayout>

    <Button
        android:id="@+id/btnPlay"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:text="@string/play"
        android:textSize="20sp"
        android:layout_below="@+id/llPlayersOrNot"
        android:layout_centerHorizontal="true"
        android:onClick="onClickPlay"
        android:backgroundTint="@color/blue"
        android:layout_marginTop="20dp"/>

    <LinearLayout
        android:id="@+id/llPlayerInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/btnPlay"
        android:padding="15dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/background_border"
        android:visibility="invisible">

        <TextView
            android:id="@+id/tvPlayerInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/playerInfo"
            android:textSize="22sp"
            android:textStyle="bold"/>

        <LinearLayout
            android:id="@+id/llplayerX"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/one"
                android:textStyle="bold"
                android:textColor="@color/lightblue"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/playerOneName"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:hint="@string/hintPlayers"
                android:gravity="center"
                android:inputType="textImeMultiLine"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llplayerO"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/two"
                android:textStyle="bold"
                android:textColor="@color/purple"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/playerTwoName"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:hint="@string/hintPlayers"
                android:gravity="center"
                android:inputType="textImeMultiLine"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tvWhoStarts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="@string/whoStarts"
            android:textSize="20sp" />

        <RadioGroup
            android:id="@+id/rgWhoStarts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rbPlayerOne"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/one"
                android:textSize="18sp"
                android:buttonTint="@color/blue"/>

            <Space
                android:layout_width="50dp"
                android:layout_height="wrap_content"/>

            <RadioButton
                android:id="@+id/rbPlayerTwo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/two"
                android:textSize="18sp"
                android:buttonTint="@color/blue"/>
        </RadioGroup>

    </LinearLayout>
</RelativeLayout>